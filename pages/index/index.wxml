<!--头部start-->
<view class="header-dw">
  <view class="header-location">
    <image src="/icon/home＿location.png" class="location-icon"></image>
  </view>
  <view class="header-address">
    <text>剑川路</text>
  </view>
  <view class="header-message">
    <image src="/icon/news_none.png" class="message-icon"></image>
  </view>
