/* quiz.wxss */
.header-dw{width: 100%;height: 6vh;background-color: #3297d8;position:absolute;top:0vh;}
.header-address text{color:#fff; font-weight: bold; position: relative; top: 3.4vh; text-align: center; line-height:6vh; height:6vh;  }
.header-address{position: relative;top: -3.4vh;left: 10vw;height: 4vh;width: 80vw; color: #fff;text-align: center;}
.uploadWrap{ width:100%; display: flex; display: -webkit-box; flex-direction: column;}
.scroll-view{width:100%; height: 11vw; background-color: #ffffff; line-height: 10vw;}
.scroll-hot{margin:0 5vw;  height:10vw;color: #676767;}
.scroll-hot:hover{border-bottom:1vw solid #69b5fb;color:#69b5fb;height:9vw; }
.count{width: 100%; height: 10vw;background-color: #eef1f1;}
.count text{color: #a0a0a0; text-align: left;padding-left: 5vw;line-height:12vw;font-size:0.8rem;}
.authorinfo-left image{width: 6vw; height: 6vw;float: left;}
.authorinfo-left .name{width: 22vw; height: 6vw;float: right;}
.authorinfo-left{float: left;width: 30vw;height: 6vw;}
.authorinfo-right{float: right;width: 50vw;height: 6vw;text-align:right;}
.authorinfo{color:#a0a0a0;width: 90vw; height: 6vw; padding: 2vw 5vw;}
.question{width: 90vw;margin-left: 5vw; height: 10vw; text-align: left;line-height: 10vw;font-weight: blod;overflow: hidden;text-overflow:ellipsis;}
.answer{margin-bottom:5vw;color:#a0a0a0;width: 90vw;margin-left: 5vw; height: 24vw; text-align: left;line-height: 8vw;overflow: hidden;text-overflow:ellipsis;}
.quizbottom{width: 100vw; height: 2vw;background-color:#eef1f1 }




